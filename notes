        \node at (5.3, 0) { $\ldots$ };
        \node at (6.2, 0) { $\Longleftarrow$ };
        \node at (9.25,0) { $=$ };
    \end{tikzpicture}

    \caption{D-reducibility requires that all ring colorings can be converted to a valid ring coloring of $C$ in $\Phi_0(C)$.}
