        \draw[fill, black] (-0.3,-0.13) circle (0.5mm);

        \draw[fill, black] (3+0.1,0.0) circle (0.5mm);
        \draw[fill, black] (3+-0.3,-0.13) circle (0.5mm);
        \draw[fill, black] (3+0.17,-0.4) circle (0.5mm);

